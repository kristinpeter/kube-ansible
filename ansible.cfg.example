[defaults]
inventory = inventory/production/hosts.yml
remote_user = ansible                    # UPDATE: Your SSH username
private_key_file = ~/.ssh/id_rsa        # UPDATE: Path to your SSH private key
host_key_checking = True
retry_files_enabled = False
stdout_callback = yaml
bin_ansible_callbacks = True
gather_facts = True
fact_caching = memory
fact_caching_timeout = 86400
interpreter_python = auto_silent

[privilege_escalation]
become = True
become_method = sudo
become_user = root
become_ask_pass = False

[ssh_connection]
ssh_args = -o ControlMaster=auto -o ControlPersist=60s -o IdentitiesOnly=yes -o StrictHostKeyChecking=accept-new
pipelining = True
control_path = ~/.ansible/cp/ansible-ssh-%%h-%%p-%%r