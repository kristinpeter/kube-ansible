---
# Example Staging Inventory  
# Copy this file to hosts.yml and update with your actual hostnames/IPs

all:
  children:
    k8s_cluster:
      children:
        k8s_masters:
          hosts:
            staging-master1.your-domain.lan:
              ansible_host: staging-master1.your-domain.lan  # or IP: 192.168.2.10
              k8s_role: master
              k8s_master_primary: true
        k8s_workers:
          hosts:
            staging-worker1.your-domain.lan:
              ansible_host: staging-worker1.your-domain.lan  # or IP: 192.168.2.20
              k8s_role: worker